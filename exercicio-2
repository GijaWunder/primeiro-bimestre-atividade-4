programa
{
	
	funcao inicio()
	{
    inteiro nota1
    inteiro nota2
    inteiro nota3
    inteiro nota4
    
    escreva("Informe a sua primeira nota ")
    leia(nota1) 
    
    escreva("Informe a sua segunda nota ")
    leia(nota2)
    
    escreva("Informe a sua terceira nota ")
    leia(nota3)
    
    escreva("Informe a sua quarta nota ")
    leia(nota4)

    escreva("A sua média é ")
    escreva((nota1 + nota2 + nota3 + nota4) / 4)
	}
}
