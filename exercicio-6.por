programa
{
	
	funcao inicio()
	{

		inteiro largura
		inteiro comprimento
		
		escreva("Informe a largura de um estádio em metros ")
		leia(largura)

		escreva("Informe o comprimento do estádio em metros ")
		leia(comprimento)

		escreva("A área do estádio é ")
		escreva(largura * comprimento, "\n")

		escreva("O dobro da área do estádio é ")
		escreva(largura * comprimento * 2, "\n")

		escreva("E o dobro da área em centímetros é ")
		escreva(largura * comprimento * 2 * 100, "\n")

	}
}
